<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp">

    <TextView
        android:id="@+id/tv_media_track"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="2"
        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
        android:textColor="?attr/colorOnSurface"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Pronto all'uso" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_prev"
        style="@style/Widget.Material3.Button.IconButton"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginEnd="16dp"
        app:icon="@drawable/ic_skip_previous"
        app:iconSize="32dp"
        app:iconTint="?attr/colorOnSurface"
        app:layout_constraintBottom_toBottomOf="@+id/btn_play_pause"
        app:layout_constraintEnd_toStartOf="@+id/btn_play_pause"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_play_pause" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_play_pause"
        style="@style/Widget.Material3.Button.IconButton.Filled"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_marginTop="32dp"
        android:padding="0dp"
        android:paddingStart="6dp"
        app:backgroundTint="@color/tw_lime_400"
        app:cornerRadius="100dp"
        app:icon="@drawable/ic_pause"
        app:iconGravity="textStart"
        app:iconSize="48dp"
        app:iconTint="@color/tw_gray_900"
        app:layout_constraintEnd_toStartOf="@+id/btn_next"
        app:layout_constraintStart_toEndOf="@+id/btn_prev"
        app:layout_constraintTop_toBottomOf="@id/tv_media_track" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_next"
        style="@style/Widget.Material3.Button.IconButton"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        app:icon="@drawable/ic_skip_next"
        app:iconSize="32dp"
        app:iconTint="?attr/colorOnSurface"
        app:layout_constraintBottom_toBottomOf="@+id/btn_play_pause"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_play_pause"
        app:layout_constraintTop_toTopOf="@+id/btn_play_pause" />

    <ImageView
        android:id="@+id/iv_vol_down"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="12dp"
        android:contentDescription="@null"
        android:importantForAccessibility="no"
        android:src="@drawable/ic_volume_mute"
        app:tint="?attr/colorOnSurfaceVariant"
        app:layout_constraintBottom_toBottomOf="@+id/slider_volume"
        app:layout_constraintEnd_toStartOf="@+id/slider_volume"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/slider_volume" />

    <com.google.android.material.slider.Slider
        android:id="@+id/slider_volume"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:stepSize="1.0"
        android:value="50.0"
        android:valueFrom="0.0"
        android:valueTo="100.0"
        app:labelBehavior="floating"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/iv_vol_up"
        app:layout_constraintStart_toEndOf="@+id/iv_vol_down"
        app:layout_constraintTop_toBottomOf="@id/btn_play_pause"
        app:thumbColor="@color/tw_lime_400"
        app:tickVisible="false"
        app:trackColorActive="@color/tw_lime_400"
        app:trackColorInactive="@color/tw_gray_200" />

    <ImageView
        android:id="@+id/iv_vol_up"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="12dp"
        android:contentDescription="@null"
        android:importantForAccessibility="no"
        android:src="@drawable/ic_volume_up"
        app:tint="?attr/colorOnSurfaceVariant"
        app:layout_constraintBottom_toBottomOf="@+id/slider_volume"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/slider_volume"
        app:layout_constraintTop_toTopOf="@+id/slider_volume" />

</androidx.constraintlayout.widget.ConstraintLayout>