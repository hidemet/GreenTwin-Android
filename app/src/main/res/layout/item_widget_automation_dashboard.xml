<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    app:cardCornerRadius="24dp"
    app:cardElevation="0dp"
    app:strokeWidth="0dp"
    app:cardBackgroundColor="@color/selector_device_background"

    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="88dp"
        android:padding="16dp">

        <!-- Icona Automazione -->
        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_automation"
            android:contentDescription="@string/content_desc_automation_icon"
            app:tint="?attr/colorOnSurfaceVariant"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_automation_name"
            app:layout_constraintBottom_toBottomOf="@id/tv_automation_desc" />

        <!-- Nome Automazione -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_automation_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="4dp"

            tools:text="Serata TV"

            style="@style/TextAppearance.Material3.TitleMedium"
            android:textColor="?attr/colorOnSurface"

            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="center_vertical|start"

            app:layout_constraintStart_toEndOf="@id/iv_icon"
            app:layout_constraintEnd_toStartOf="@+id/barrier_edit_actions"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/tv_automation_desc"
            app:layout_constraintVertical_chainStyle="packed" />

        <!-- Descrizione/Trigger -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_automation_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"

            tools:text="Quando: 21:00"

            style="@style/TextAppearance.Material3.BodyMedium"

            android:maxLines="1"
            android:ellipsize="end"

            android:textColor="@color/selector_device_text"
            app:layout_constraintStart_toStartOf="@id/tv_automation_name"
            app:layout_constraintEnd_toEndOf="@id/tv_automation_name"
            app:layout_constraintTop_toBottomOf="@id/tv_automation_name"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Pulsante Elimina (Edit Mode) -->
        <ImageView
            android:id="@+id/iv_remove_action"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_delete"
            android:contentDescription="@string/content_desc_remove_widget"
            app:tint="?attr/colorError"
            android:padding="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:visibility="gone"
            android:elevation="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Handle per Drag & Drop (Edit Mode) -->
        <ImageView
            android:id="@+id/iv_drag_handle"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_drag_indicator"
            android:contentDescription="@string/content_desc_drag_handle"
            app:tint="?attr/colorOnSurfaceVariant"
            android:padding="4dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Barrier per allineare il testo -->
        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier_edit_actions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="start"
            app:constraint_referenced_ids="iv_remove_action,iv_drag_handle" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>




