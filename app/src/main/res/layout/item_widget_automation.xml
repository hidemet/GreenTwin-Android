<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    app:cardCornerRadius="24dp"
    app:cardElevation="0dp"
    app:strokeWidth="0dp"
    app:cardBackgroundColor="?attr/colorCardBackgroundActive">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="90dp"
        android:padding="16dp">

       
        <TextView
            android:id="@+id/tv_automation_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            tools:text="Serata TV"
            android:textSize="16sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="10sp"
            app:autoSizeMaxTextSize="16sp"
            app:autoSizeStepGranularity="1sp"
            android:textColor="?attr/colorTextPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/barrier_actions"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/tv_automation_desc"
            app:layout_constraintVertical_chainStyle="packed" />

       
        <TextView
            android:id="@+id/tv_automation_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            tools:text="Quando: 21:00"
            android:textSize="13sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="?attr/colorTextSecondary"
            app:layout_constraintStart_toStartOf="@id/tv_automation_name"
            app:layout_constraintEnd_toEndOf="@id/tv_automation_name"
            app:layout_constraintTop_toBottomOf="@id/tv_automation_name"
            app:layout_constraintBottom_toBottomOf="parent" />

       

       
        <ImageView
            android:id="@+id/iv_remove_action"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_delete"
            app:tint="?attr/colorError"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

       
        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/switch_active"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

       
        <ImageView
            android:id="@+id/iv_drag_handle"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_drag_indicator"
            app:tint="?attr/colorOnSurfaceVariant"
            android:padding="6dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier_actions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="start"
            app:constraint_referenced_ids="iv_remove_action,switch_active,iv_drag_handle" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>