<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.AppDT" parent="Theme.Material3.Light.NoActionBar">

        <!--  stile di default dei MaterialSwitch -->
        <item name="materialSwitchStyle">@style/Widget.App.Switch</item>

        <!--  stile switch legacy -->
        <item name="switchStyle">@style/Widget.App.Switch</item>

        <item name="android:statusBarColor">?attr/colorSecondary</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="colorPrimary">@color/greentwin_secondary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/tw_lime_100</item>
        <item name="colorOnPrimaryContainer">@color/greentwin_secondary</item>

        <item name="colorSecondary">@color/tw_lime_400</item>
        <item name="colorOnSecondary">@color/tw_gray_900</item>
        <item name="colorSecondaryContainer">@color/md_theme_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_onSecondaryContainer</item>


        <item name="colorTertiary">@color/md_theme_tertiary</item>
        <item name="colorOnTertiary">@color/md_theme_onTertiary</item>
        <item name="colorTertiaryContainer">@color/md_theme_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/md_theme_onTertiaryContainer</item>

        <item name="colorError">@color/tw_red_500</item>
        <item name="colorOnError">@color/white</item>
        <item name="colorErrorContainer">@color/md_theme_errorContainer</item>
        <item name="colorOnErrorContainer">@color/md_theme_onErrorContainer</item>

        <item name="android:colorBackground">@color/ds_background</item>
        <item name="colorOnBackground">@color/ds_text_primary</item>

        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/ds_text_primary</item>
        <item name="colorSurfaceVariant">@color/tw_gray_100</item>
        <item name="colorOnSurfaceVariant">@color/ds_text_secondary</item>

        <item name="colorOutline">@color/tw_gray_300</item>
        <item name="colorOutlineVariant">@color/md_theme_outlineVariant</item>

        <item name="materialButtonStyle">@style/Widget.App.Button</item>
        <item name="textInputStyle">@style/Widget.App.TextInputLayout</item>
        <!-- Sfondo Card: Bianco se ON, Grigio scuro se OFF -->
        <item name="colorDeviceBackgroundOn">@color/white</item>
        <item name="colorDeviceBackgroundOff">@color/tw_gray_300</item> <!-- O ds_card_background_inactive -->

        <!-- Testo: Scuro se ON, Grigio scuro se OFF -->
        <item name="colorDeviceTextOn">@color/tw_gray_900</item>
        <item name="colorDeviceTextOff">@color/tw_gray_600</item>

        <!-- Icone: Colorate (Primary) se ON, Grigie se OFF -->
        <item name="colorDeviceIconOn">?attr/colorPrimary</item>
        <item name="colorDeviceIconOff">@color/tw_gray_500</item>

        <!-- Card Background -->
        <item name="colorCardBackgroundActive">@color/white</item>
        <item name="colorCardBackgroundInactive">@color/tw_gray_200</item>

        <!-- Text Colors -->
        <item name="colorTextPrimary">@color/ds_text_primary</item>
        <item name="colorTextSecondary">@color/ds_text_secondary</item>

        <!-- Icon Colors -->
        <item name="colorIconActive">?attr/colorPrimary</item>
        <item name="colorIconInactive">@color/tw_gray_500</item>

        <!-- Status Colors -->
        <item name="colorStatusOn">@color/greentwin_secondary</item>
        <item name="colorStatusOff">@color/tw_gray_400</item>

        <!-- Special Icons -->
        <item name="colorIconThermostat">@color/tw_orange_400</item>
    </style>

    <style name="Theme.AppDT" parent="Base.Theme.AppDT" />

    <style name="Widget.App.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.Material3.Button">
        <item name="backgroundTint">?attr/colorSecondary</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.App.Button.TextButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>

    <style name="Widget.App.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/tw_slate_200</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/greentwin_surface</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_round</item>
        <item name="postSplashScreenTheme">@style/Theme.AppDT</item>
    </style>

    <style name="TextAppearance.App.Tab.Bold" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Widget.App.TabLayout.Primary" parent="Widget.Material3.TabLayout">
        <item name="tabIndicatorColor">?attr/colorOnSurface</item>
        <item name="tabSelectedTextColor">?attr/colorOnSurface</item>
        <item name="tabTextColor">@color/ds_text_secondary</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabTextAppearance">@style/TextAppearance.App.Tab.Bold</item>
        <item name="tabMode">fixed</item>
        <item name="tabIndicatorFullWidth">true</item>
        <item name="android:background">@drawable/layer_tab_primary_background</item>
        <item name="tabRippleColor">@color/tw_gray_200</item>
    </style>

    <style name="Widget.App.Chip.Choice" parent="Widget.Material3.Chip.Filter">
        <item name="checkedIconVisible">false</item>
        <item name="chipBackgroundColor">@color/selector_chip_background</item>
        <item name="chipStrokeColor">@color/selector_chip_stroke</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textColor">@color/selector_chip_text</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.App.Chip.Pill</item>
        <item name="rippleColor">@color/tw_lime_100</item>
        <item name="chipStartPadding">16dp</item>
        <item name="chipEndPadding">16dp</item>
    </style>

    <style name="ShapeAppearance.App.Chip.Pill" parent="ShapeAppearance.Material3.Corner.Full">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Widget.App.ColorPresetCard" parent="Widget.Material3.CardView.Filled">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="Widget.App.Button.Outlined.Group" parent="Widget.Material3.Button.OutlinedButton">
        <item name="backgroundTint">@color/selector_segmented_background</item>
        <item name="android:textColor">@color/selector_segmented_text</item>
        <item name="iconTint">@color/selector_segmented_text</item>
        <item name="strokeColor">@color/selector_segmented_stroke</item>

        <item name="strokeWidth">1dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:minHeight">40dp</item>

        <item name="android:paddingVertical">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>

        <item name="rippleColor">@color/tw_lime_200</item>

        <item name="shapeAppearance">@style/ShapeAppearance.App.Pill</item>
    </style>

    <style name="ShapeAppearance.App.Pill" parent="ShapeAppearance.Material3.Corner.Full">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>


    <!-- Stile Base per la AppBar (Contenitore) -->
    <style name="Widget.App.AppBarLayout" parent="Widget.Material3.AppBarLayout">
        <item name="android:background">@android:color/transparent</item>
        <item name="elevation">0dp</item>
    </style>

    <!-- Stile Base per la Toolbar (Contenuto) -->
    <style name="Widget.App.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="titleTextAppearance">@style/TextAppearance.Material3.HeadlineSmall</item>
        <item name="titleTextColor">?attr/colorOnSurface</item>
        <item name="navigationIconTint">?attr/colorOnSurface</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="titleCentered">false</item>
    </style>


    <style name="Widget.App.Switch" parent="Widget.Material3.CompoundButton.MaterialSwitch">
        <item name="trackTint">@color/selector_switch_track</item>
        <item name="thumbTint">@color/selector_switch_thumb</item>

        <!--  Rimuove il bordo (outline) nello stato -->
        <item name="trackDecorationTint">@android:color/transparent</item>
    </style>

    <!-- Dialog con sfondo Surface per "Attenzione ai consumi" -->
    <style name="ThemeOverlay.App.Dialog.Surface" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorSurface">?attr/colorSurface</item>
        <item name="materialAlertDialogTitleTextStyle">@style/TextAppearance.App.Dialog.Title</item>
        <item name="materialAlertDialogBodyTextStyle">@style/TextAppearance.App.Dialog.Body</item>
    </style>

    <style name="TextAppearance.App.Dialog.Title" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="TextAppearance.App.Dialog.Body" parent="MaterialAlertDialog.Material3.Body.Text">
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
    </style>


</resources>