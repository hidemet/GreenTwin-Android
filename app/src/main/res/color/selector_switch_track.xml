<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- STATO ON attivo -->
    <item android:state_checked="true" android:state_enabled="true"
        android:color="?attr/colorSecondary" />

    <!-- STATO OFF disattivato ma abilitato -->
    <item android:state_checked="false" android:state_enabled="true"
        android:color="?attr/colorSurfaceVariant" />

    <!-- STATO DISABILITATO opzionale grigio chiaro -->
    <item android:alpha="0.3" android:color="?attr/colorOnSurface" />
</selector>